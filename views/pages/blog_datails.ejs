<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('../partial/head') %>
    <title>blog</title>
  </head>
  <body>
    <%-include('../partial/nav') %>
    <div>
      <div class="container mt-4">
        <h1><%=blog.title%></h1>
        <br />
        <img
          src="/<%=blog.coverImgUrl%>"
          alt="..."
          height="300px"
          width="500px"
        />
        <br />
        <br />
        <pre><%=blog.body%></pre>
      </div>
    </div>
    <div class="container">
      <h2>Posted By</h2>
      <img
        src="<%=blog.createdBy.ProImgUrl%>"
        alt=""
        width="50px"
        height="50px"
      />
      <%=blog.createdBy.fullName%>
    </div>

   <%if(locals.user){%>
    <div class="container mt-4">
      <h1>Comment</h1>
      <form action="/blog/comment/<%=blog._id%>" method="post">
        <div class="mb-3">
          <input
            type="text"
            name="content"
            class="form-control"
            id="content"
            placeholder="enter your comment"
          />
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
      </form>
    </div>
  <%}%>

  <div class="container mt-4" >
    <h1>comments(<%=comments.length%>)</h1>
    <br>
  <%comments.forEach((comment)=>{%>
    <img 
    src="<%=comment.createdBy.ProImgUrl%>"
    alt=""
    width="50px"
    height="50px"
  />
  <%=comment.createdBy.fullName%>
  <pre class="mt-1"><%=comment.content%></pre>
  <%})%>
  </div>
    <%-include('../partial/script') %>
  </body>
</html>
